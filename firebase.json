{
    "hosting": {
        "public": "out",
        "ignore": [
            "firebase.json",
            "yarn.json",
            "package.json",
            "renovate.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers": [
            {
                "source": "**",
                "headers" : [
                    { 
                        "key": "Content-Security-Policy",
                        "value": "base-uri 'self'; default-src 'none'; style-src 'self' 'unsafe-inline'; script-src 'self'; img-src 'self' data:; media-src 'none'; font-src 'self' data: fonts.gstatic.com; connect-src 'self' fonts.googleapis.com; worker-src 'none'; frame-src 'none'; form-action 'none'; frame-ancestors;"
                    },
                    {
                        "key": "X-Frame-Options",
                        "value": "DENY"
                    },
                    {
                        "key": "X-XSS-Protection",
                        "value": "1; mode=block"
                    },
                    {
                        "key": "X-Content-Type-Options",
                        "value": "nosniff"
                    }
                ]
            }
        ]
    }
}
